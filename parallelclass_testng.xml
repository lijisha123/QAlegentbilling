<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="parallel testing of classes">

	<listeners>

		<listener class-name="com.qalegentbilling.listeners.TestListener" />

	</listeners>

	<test thread-count="5" name="chrome-parallel testing-classes" parallel="classes">

		<parameter name="browser" value="chrome" />

		<classes>

			<class name="com.qalegentbilling.testscript.LoginTest">

				<methods>

					<include name="TC001_verifyLoginPageTitle" />

				</methods>

			</class>

		</classes>

	</test> <!-- Test -->

	<test thread-count="5" name="edge-parallel testing-classes" parallel="classes">

		<parameter name="browser" value="edge"/>

		<classes>

			<class name="com.qalegentbilling.testscript.HomeTest">

				<methods>

					<include name="TC006_verifyHomePageTitle()" />

				</methods>

			</class>

		</classes>

	</test> <!-- Test -->

</suite> <!-- Suite -->